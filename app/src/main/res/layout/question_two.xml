<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much does your phone cost?"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        />

    <RadioGroup
        android:id="@+id/rgp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rgp2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="under 1000"
            android:layout_marginTop="30dp"
            android:checked="true"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="1000-1999"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="2000-2999"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="3000-3999"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp2_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="More than 4000"
            ></RadioButton>

    </RadioGroup>
    <!-- END    : Your code should be within this block -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="NEXT"
            android:background="#39BD3E"
            android:onClick="question_two"
            ></Button>
    </RelativeLayout>

    <!-- END    : Your code should be within this block -->

</LinearLayout>
