<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 4"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What functions does your phone have now?"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        />

    <CheckBox
        android:id="@+id/grp4_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:text="Music functions" >
    </CheckBox>
    <CheckBox
        android:id="@+id/grp4_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Photo functions" >
    </CheckBox>
    <CheckBox
        android:id="@+id/grp4_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Game functions" >
    </CheckBox>
    <CheckBox
        android:id="@+id/grp4_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Business functions(World,Excel,ect.)" >
    </CheckBox>
    <CheckBox
        android:id="@+id/grp4_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="GPS functions" >
    </CheckBox>
    <CheckBox
        android:id="@+id/grp4_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Data functions(Bluetooth,WLAN,ect.)">
    </CheckBox>
    <CheckBox
        android:id="@+id/grp4_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Others" >
    </CheckBox>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="NEXT"
            android:background="#39BD3E"
            android:onClick="question_four"
            ></Button>
    </RelativeLayout>
    <!-- END    : Your code should be within this block -->

</LinearLayout>
