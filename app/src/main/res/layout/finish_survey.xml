<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="THANK YOU"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOR YOUR ANSWERS!"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_marginLeft="40dp"></TextView>
    <!-- END    : Your code should be within this block -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="319dp"
        android:src="@drawable/thanks"></ImageView>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent">
<Button
    android:layout_width="320dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text="FINISH"
    android:background="#39BD3E"
    android:onClick="finish"

    ></Button>
</RelativeLayout>
</LinearLayout>
