<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->


    <!-- END    : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE PART IN OUR SURVEY!"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_marginLeft="40dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Befor we start,here are things you should know:"
        android:layout_marginTop="120dp"
        android:textSize="24dp"
        android:layout_marginLeft="40dp">
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Please be honest when making your choice."
        android:layout_marginTop="200dp"
        android:textSize="18dp"
        android:layout_marginLeft="40dp">
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-We are just doing a reaserch so you don't have to fake your information."
        android:layout_marginTop="260dp"
        android:textSize="18dp"
        android:layout_marginLeft="40dp">
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Please follow the step we designed for you and don't skip any questions."
        android:layout_marginTop="340dp"
        android:textSize="18dp"
        android:layout_marginLeft="40dp">
        ></TextView>

    <RadioButton
        android:id="@+id/rb_welcome"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content"
        android:text="I accept these requests."
        android:textColor="#000000"/>
    <Button
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="LET'S START!"
        android:background="#39BD3E"
        android:onClick="welcome"
        ></Button>
    </RelativeLayout>