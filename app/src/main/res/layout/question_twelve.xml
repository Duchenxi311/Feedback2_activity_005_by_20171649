<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 12"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much money do you earn per month?"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        />

    <RadioGroup
        android:id="@+id/rgp12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rgp12_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="I haven't got a job"
            android:layout_marginTop="30dp"
            android:checked="true"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Under 3000"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp12_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="3000-5000"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp12_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="5000-10000"
            ></RadioButton>
        <RadioButton
            android:id="@+id/rgp12_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="More than 10000"
            ></RadioButton>
    </RadioGroup>
    <!-- END    : Your code should be within this block -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="NEXT"
            android:background="#39BD3E"
            android:onClick="question_twelve"
            ></Button>
    </RelativeLayout>

    <!-- END    : Your code should be within this block -->

</LinearLayout>
